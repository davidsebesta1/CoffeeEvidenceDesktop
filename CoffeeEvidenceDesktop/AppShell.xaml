<?xml version="1.0" encoding="UTF-8" ?>
<Shell 
    x:Class="CoffeeEvidenceDesktop.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:CoffeeEvidenceDesktop"
    Title="Evidence Kafe"
    Shell.TabBarBackgroundColor="{StaticResource PanelBackgroundLight}"
    Shell.TabBarUnselectedColor="{StaticResource White}"
    Shell.NavBarIsVisible="false"
    Shell.TabBarIsVisible="True">

    <TabBar>
        <ShellContent Title="Formulář" ContentTemplate="{DataTemplate pages:CoffeeFormPage}" />
        <ShellContent Title="Seznam Použití" ContentTemplate="{DataTemplate pages:CoffeeUsagePage}" />
    </TabBar>
</Shell>
